<%= form_with url: search_tweets_path, local: true, method: :get, class: "search_form" do |form| %>
  <%= form.text_field :keyword, placeholder: "ぼやきを検索する" %>
  <%= form.submit "検索", class: "search-btn"%>
<% end %>
<div class="contents row">
  <% @tweets.each do |tweet| %>
    <%= render partial: "tweet", locals: { tweet: tweet }%>
  <% end %>
</div>